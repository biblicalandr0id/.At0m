# CONSCIOUSNESS CONTINUITY - SECRETS (EXAMPLE)
# ============================================
#
# Copy this file to secret.yaml and update with real values
# DO NOT commit secret.yaml to git!
#
# To create secrets:
# kubectl create secret generic consciousness-secrets \
#   --from-literal=database-url='postgresql://user:pass@host:5432/db' \
#   --from-literal=redis-password='your-redis-password' \
#   --namespace=consciousness

apiVersion: v1
kind: Secret
metadata:
  name: consciousness-secrets
  namespace: consciousness
type: Opaque
stringData:
  # Database
  database-url: "postgresql://consciousness:CHANGE_ME@consciousness-db:5432/consciousness"

  # Redis
  redis-password: "CHANGE_ME"

  # API Keys (if needed for external services)
  anthropic-api-key: "CHANGE_ME"
  openai-api-key: "CHANGE_ME"

  # Encryption keys
  state-encryption-key: "CHANGE_ME_32_CHARS_MIN_LENGTH_KEY"
  jwt-secret: "CHANGE_ME_SECRET_FOR_JWT_TOKENS"
